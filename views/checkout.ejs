     <div class="row">
          <div class="col-lg-6">
               <div class="box-element" id="form-wrapper">
                    <form id="form" method="POST" action="/process_order">
                         <div id="user-info">
                              <div class="form-field">
                                   <input required class="form-control" type="text" name="name" placeholder="Name..">
                              </div>
                              <div class="form-field">
                                   <input required class="form-control" type="email" name="email" placeholder="Email..">
                              </div>
                         </div>
                         
                         <div id="shipping-info">
                              <hr>
                              <p>Shipping Information:</p>
                              <hr>
                              <div class="form-field">
                                   <input class="form-control" type="text" name="address" placeholder="Address..">
                              </div>
                              <div class="form-field">
                                   <input class="form-control" type="text" name="phone" placeholder="Phone..">
                              </div>
                         </div>

                         <hr>
                         <input id="form-button" class="btn btn-success btn-block" type="submit" value="Continue">
                    </form>
               </div>

               <br>
               <div class="box-element hidden" id="payment-info">
                    <small>Paypal Options</small>
               </div>
               
          </div>

          <div class="col-lg-6">
               <div class="box-element">
                    <a  class="btn btn-outline-dark" href="/cart">&#x2190; Back to Cart</a>
                    <hr>
                    <h3>Order Summary</h3>
                    <hr>
                    <% cart.forEach((entry) => { %>
                    <div class="cart-row">
                         <div style="flex:2"><img class="row-image" src="/images/<%= entry.image %>"></div>
                         <div style="flex:2"><p><%= entry.name %></p></div>
                         <div style="flex:1"><p>$<%= entry.price %></p></div>
                         <div style="flex:1"><p>x1</p></div>
                    </div>
                    <% }) %>
                    <h5>Items:   <%= cartQty %></h5>
                    <h5>Total:   $<%= cartTotal %></h5>
               </div>
          </div>
     </div>